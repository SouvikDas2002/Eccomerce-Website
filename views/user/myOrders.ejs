        </header>
    <div class="pt-4">
    <h2 class="pt-5 ps-2">Your Orders </h2>
    </div>
    <table border="1" width="100%" class="table mt-4">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Address</th>
            <th>Total Amount</th>
            <th>View/Add to Cart</th>
        </tr>
        <%  products.forEach((item,index)=>{ %>

            <tr>
                <td><img src="/<%=item.productimage%>" width="100" height="100" style="background-size: cover;border-radius: 5px;"></td>
                <td><%=item.name%></td>
                <td><%=item.address%></td>
                <td><%=item.totalAmount%></td>
                <td>
                    <a href="/users/orders/wishlist/<%= item.name %>"><button  style="border-radius: 5px;background-color: aquamarine;">View</button></a>
                    <button class="ms-2" id="cancel<%= index %>" onclick="cancelBtn(<%= index %>)" style="border-radius: 5px;background-color: rgb(102, 102, 197);color: antiquewhite;">Cancel Order</button></td>
                    
                    
                </tr>
                <tr>
                    <td colspan="5" class="w-auto p-3"> 
                        <form style="display: none;" id="reason<%= index %>">
                            <p>Help us to improve</p>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="check1" name="option1" value="something" >
                            <label class="form-check-label">Price is too high</label><br>
                            <input class="form-check-input" type="checkbox" id="check1" name="option1" value="something" >
                            <label class="form-check-label">Make another choice</label><br>
                            <input class="form-check-input" type="checkbox" id="check1" name="option1" value="something" >
                            <label class="form-check-label">Already purchase this product</label><br>
                            <input class="form-check-input" type="checkbox" id="check1" name="option1" value="something" >
                            <label class="form-check-label">View similar products</label><br>
                            <input class="form-check-input" type="checkbox" id="check1" name="option1" value="something" >
                            <label class="form-check-label">Another reason</label>
                        </div>
                        <input type="text" name="comment" placeholder="Comment" style="width: 100%;"/>
                       <center> <button class="mt-2 w-75 bg-primary" type="submit">Confirm</button></center>
                       <center> <button class="mt-2 w-75 bg-primary" id="cancelfrom" onclick="cancelfrom(<%= index%>)">Cancel</button></center>
                    </form>
                </td>

                </tr>
                
            
            <% }) %>
        </table>
        <script>
            // var cancelBtn=document.getElementById("cancel");
            function cancelBtn(index){
                var reason=document.getElementById("reason"+index);
                reason.style.display="block";
            }
            // var cancelfrom=document.getElementById("cancelfrom");
            function cancelfrom(index){
                var reason=document.getElementById("reason"+index);
                reason.style.display="none";
            }
            
        </script>
</body>
