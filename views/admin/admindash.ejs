<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<body>
    <!-- <h1>Welcome to admin dashboard</h1> -->
    

    <div style="width:100%; height: 550px; object-fit: cover;" >
        <div class="d-flex flex-column align-items-center" style="font-family: Lora, serif;color: #444;">
          <!-- <span class='position-absolute fs-5' style="top: 10px;">Shopping Karo Dil Se</span>
          <span class='position-absolute fs-1' style="top: 25px;">ShopSite</span> -->
        </div>
        <img src="https://images.pexels.com/photos/4716293/pexels-photo-4716293.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=4" height="100%" width="100%" alt="">
      </div>

      <div class="bg-primary h-25 p-2">
        <div class="d-flex justify-content-center" style="font-family: Lora,sans-serif;">
    <a class="text-warning fw-bold me-4 nav-link" href="/admin/productadd">Product Add</a>
    <a class="text-warning fw-bold me-4 nav-link" href="/admin/productdetails">Product Details</a>
    <a class="text-warning fw-bold me-4 nav-link" href="/admin/profile">Orders Details</a>
    <a class="text-warning fw-bold me-4 nav-link"href="/admin/history">History</a>
    <a class="text-warning fw-bold me-4 nav-link"href="/admin/history">Users Review</a>
    <a class="text-warning fw-bold me-4 nav-link"href="/logout">Users Feedback</a>
    </div>
    </div>

    <form action="/admin/search" class=" mt-4 ms-4">  
        <input  type="text" name="id" placeholder="Enter product Id" style="width: 25%;height: 35px;">
        <button type="submit"><i class=" fa-solid fa-magnifying-glass"></i></button>
    </form>

    <table border="1" width="100%" class="table mt-4">
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Details</th>
            <th>Modify</th>
        </tr>
        <%  productdetails.forEach(item=>{ %>

            <tr>
                <td><%=item._id%></td>
                <td><img src="/<%=item.productimage%>" width="100" height="100" style="background-size: cover;border-radius: 5px;"></td>
                <td class="fs-5" style="text-transform: uppercase;"><%=item.name%></td>
                <td class="fs-5">Rs. <%=item.price%></td>
                <td class="fs-5"><%=item.details%></td>
                <td>
                    <a class="me-4 fs-5" href="/admin/productupdate/<%= item._id %>"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a class="fs-5" href="/admin/productdelete/<%= item._id %>"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        <% }) %>
    </table>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
